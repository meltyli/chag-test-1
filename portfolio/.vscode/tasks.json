  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "npm: clean-dist folder",  // Updated label
      "type": "shell",
      "command": "npx rimraf dist",  // Using rimraf to remove the /dist folder
      "group": {
        "kind": "build"
      }
    },
    {
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "label": "npm run build",
      "detail": "ng build",
      "dependsOn": ["npm: clean-dist folder"]  // Adding dependency on the clean-dist task
    },
    {
      "label": "Deploy to gh-pages",
      "type": "shell",
      "command": "npx ngh --dir=dist/chag-test-1", // Using ngh to deploy
      "group": {
        "kind": "build"
      },
      "dependsOn": ["npm run build"]
    }
  ]
}
